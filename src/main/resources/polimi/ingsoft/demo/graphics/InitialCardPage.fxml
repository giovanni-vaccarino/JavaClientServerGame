<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<AnchorPane styleClass="initialPage" stylesheets="/polimi/ingsoft/demo/graphics/css/PageStyle.css"
            xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="polimi.ingsoft.client.ui.gui.page.InitialCardPageController"
            maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="800.0" prefWidth="1350.0"
>
    <children>
        <StackPane layoutX="0.0" layoutY="230.0" prefWidth="1350" prefHeight="100" alignment="CENTER">
            <children>
                <Label text="Initial card" styleClass="textBold"
                       stylesheets="/polimi/ingsoft/demo/graphics/css/TextStyle.css">
                </Label>
            </children>
        </StackPane>

        <StackPane layoutX="0.0" layoutY="490.0" prefWidth="1350" prefHeight="65" alignment="CENTER">
            <children>
                <Button fx:id="flipButton" mnemonicParsing="false" text="Flip"
                        prefWidth="100" prefHeight="50" styleClass="buttonRegular"
                        stylesheets="/polimi/ingsoft/demo/graphics/css/ButtonStyle.css"
                        onAction="#flip">
                </Button>
            </children>
        </StackPane>

        <StackPane layoutX="0.0" layoutY="570.0" prefWidth="1350" prefHeight="65" alignment="CENTER">
            <children>
                <Button fx:id="selectButton" mnemonicParsing="false" text="Select"
                        prefWidth="120" prefHeight="50" styleClass="buttonRegular"
                        stylesheets="/polimi/ingsoft/demo/graphics/css/ButtonStyle.css"
                        onAction="#select">
                </Button>
            </children>
        </StackPane>

        <StackPane layoutX="0.0" layoutY="350.0" prefWidth="1350" prefHeight="65" alignment="CENTER">
            <children>
                <ImageView fx:id="initialCard" />
            </children>
        </StackPane>

        <StackPane layoutX="1000.0" layoutY="40.0" prefWidth="150" prefHeight="120" alignment="CENTER">
            <children>
                <Button mnemonicParsing="false" text="Wait!"
                        prefWidth="150" prefHeight="120" styleClass="successPane"
                        stylesheets="/polimi/ingsoft/demo/graphics/css/ButtonStyle.css"
                        fx:id="waitButton">
                </Button>
            </children>
        </StackPane>

    </children>
</AnchorPane>
